<div>
  <%= form_with model: [post, Comment.new] do |form| %>
    <div class = "form-group">
      <%= form.label :commenter, class: "control-label" %>
      <%= form.text_field :commenter, value: current_user.username, class: "form-control", readonly: true %>
    </div>
    <div class = "form-group">
      <%= form.label :comment, class: "control-label" %>
      <%= form.text_area :body, class: "form-control", rows: 5 %>
    </div>
    <div><%= form.submit %></div>
  <% end %>
</div>
