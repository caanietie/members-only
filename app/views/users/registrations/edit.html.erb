<%= render "users/shared/header_footer" do %>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: {turbo: false}) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %> <small><i>(leave blank if you don't want to change it)</i></small>
      <%= f.password_field :password, class: "form-control", required: true %>
      <% if @minimum_password_length %>
        
        <small><em><%= @minimum_password_length %> characters minimum</em></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label "Confirm password" %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <small><i>(we need your current password to confirm your changes)</i></small>
      <%= f.password_field :current_password, class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary form-control" %>
    </div>
  <% end %>

  <p><%= button_to "Delete account", registration_path(resource_name), form: {data: { confirm: "Are you sure?" }}, method: :delete, class: "btn btn-danger form-control" %></p>

  <%= link_to "Go Back", :back, class: "btn btn-default form-control", role: :button %>
<% end %>
