<% if which_flash %>
  <div class="alert alert-<%= which_flash %> alert-dismissible" role="alert">
    <span class = "glyphicon glyphicon-info-sign" aria-hidden="true"></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span>&times;</span>
    </button> <%= notice || alert %>
  </div>
<% end %>
