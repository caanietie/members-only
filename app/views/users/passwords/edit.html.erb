<%= render "users/shared/header_footer" do %>
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: {turbo: false}) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <small><em>(<%= @minimum_password_length %> characters minimum)</em></small>
      <% end %>
      <%= f.password_field :password, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
<% end %>
