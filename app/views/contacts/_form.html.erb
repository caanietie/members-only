<%= form_with model: @contact do |form| %>
  <%= render "users/shared/error_messages", resource: @contact %>
  <% name = current_user.username if user_signed_in? %>
  <div class = "form-group">
    <%= form.label :name, class: "control-label" %>
    <%= form.text_field :name, value: name, class: "form-control", required: true %>
  </div>
  <div class  = "form-group">
    <%= form.label :message %>
    <%= form.text_area :message, rows: 6, class: "form-control", required: true %>
  </div>
  <%= form.button class: "btn btn-primary form-control" do %>
    <span class = "glyphicon glyphicon-send" aria-hidden="true"></span> Send Message
  <% end %>
<% end %>
